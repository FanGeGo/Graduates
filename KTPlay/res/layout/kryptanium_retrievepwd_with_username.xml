<?xml version="1.0" encoding="utf-8"?>

<!-- 手机号登录界面 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 内容区 -->
    <LinearLayout
        android:layout_width="@dimen/kryptanium_login_content_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <!-- 提示信息 -->
        <TextView
            style="@style/kryptanium_secondary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/kt_tip_resetpassword_with_email" />

        <!-- 邮箱 -->
        <com.ktplay.widget.KTClearableEditText
            android:id="@+id/kryptanium_username_retrievepwd_email"
            style="@style/kryptanium_edittext"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:hint="@string/kt_input_email"
            android:inputType="textEmailAddress" />


        <!-- 发送按钮 -->
        <TextView
            android:id="@+id/kryptanium_username_retrievepwd_send"
            style="@style/kryptanium_button_style_main"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:text="@string/kt_send" />

        <!-- 手机号登录链接 -->
        <!--   <TextView
               style="@style/kryptanium_link_text"
               android:id="@+id/kryptanium_username_retrievepwd_to_phone_retrievepwd"
               android:layout_gravity="center_horizontal|bottom"
               android:layout_marginTop="40dp"
               android:text="@string/kt_reset_password_with_phonenumber"
              /> -->
    </LinearLayout>

</FrameLayout>
