<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_hot_activeuser_layout"
    style="@style/kryptanium_home_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@id/kt_icon"
        style="@style/kryptanium_subtitle_icon"
        android:src="@drawable/kt_home_active_user" />

    <TextView
        style="@style/kryptanium_subtitle_text"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/kt_icon"
        android:text="@string/kt_active_players" />

    <com.ktplay.widget.HorizontalListView
        android:id="@+id/kryptanium_hot_activeuser_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kt_avatar_size_large"
        android:layout_below="@id/kt_icon"
        android:layout_marginTop="14dp"
        android:cacheColorHint="#ffffffff"
        android:listSelector="#00000000"
        android:spacing="@dimen/kt_icon_hspacing" />

</RelativeLayout>
