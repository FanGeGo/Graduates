<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_dialog_wait_cancel_parentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#05000000"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/kryptanium_dialog_wait_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/kryptanium_corner_bg_black_alpha"
        android:padding="12.5dp"

        >

        <ImageView
            android:id="@+id/kryptanium_dialog_wait_progress_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/kryptanium_loading_w_x2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kryptanium_dialog_wait_progressbar_cancel_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/kryptanium_corner_bg_black_alpha"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/kryptanium_dialog_wait_cancel_progress_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/kryptanium_loading_w_x2" />

        <TextView
            android:id="@+id/kryptanium_dialog_wait_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/kt_netwaok_unstable"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <View
            style="@style/kryptanium_seperate_line"
            android:layout_width="165dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/kryptanium_dialog_wait_cancel"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/kt_cancel"
            android:textColor="#ffffff" />
    </LinearLayout>
</FrameLayout>
