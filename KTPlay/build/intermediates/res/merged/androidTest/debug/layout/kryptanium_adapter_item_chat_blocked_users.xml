<?xml version="1.0" encoding="utf-8"?>

<!-- 列表项-黑名单用户（聊天） -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/kryptanium_list_item"
    android:orientation="horizontal">

    <TextView
        android:id="@id/kt_item_title"
        style="@style/kryptanium_primary_text_light"
        android:layout_width="0dp"
        android:layout_height="@dimen/kryptanium_user_login_edit_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1" />

    <TextView
        android:id="@+id/kryptanium_chat_blocked_user_unblock"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/kryptanium_user_login_edit_height"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:text="@string/kt_unblock"
        android:textColor="@color/kt_theme_color"
        android:textSize="@dimen/kryptanium_text_size_standard" />

</LinearLayout>
