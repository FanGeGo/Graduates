<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_hot_video_layout"
    style="@style/kryptanium_home_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@id/kt_icon"
        style="@style/kryptanium_subtitle_icon"
        android:src="@drawable/kt_home_video" />

    <TextView
        style="@style/kryptanium_subtitle_text"
        android:layout_toRightOf="@id/kt_icon"
        android:text="@string/kt_videos" />

    <com.ktplay.support.v4.view.ViewPager
        android:id="@+id/kryptanium_hot_video_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/kt_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/kt_content_padding"
        android:gravity="top|center_horizontal" />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="6dp"-->
    <!--android:background="@color/kryptanium_title_bg"/>-->

</RelativeLayout>
