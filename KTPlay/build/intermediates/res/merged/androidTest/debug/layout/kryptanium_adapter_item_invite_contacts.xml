<?xml version="1.0" encoding="utf-8"?>

<!-- 列表项 - 从联系人添加好友 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/kryptanium_list_item_with_noclick"
    android:orientation="horizontal">

    <!-- 用户昵称 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/kryptanium_invite_contact_status_layout"
        android:orientation="vertical">

        <TextView
            android:id="@id/kt_item_title"
            style="@style/kryptanium_primary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:maxLines="1" />

        <TextView
            android:id="@id/kt_item_content"
            style="@style/kryptanium_secondary_text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1" />
    </LinearLayout>

    <!-- 发送状态 -->

    <LinearLayout
        android:id="@+id/kryptanium_invite_contact_status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kryptanium_invite_contact_status"
            style="@style/kryptanium_link_text_large"
            android:layout_width="@dimen/kryptanium_msgbox_item_textview_down_width"
            android:layout_height="@dimen/kryptanium_msgbox_item_textview_down_height"
            android:background="#00000000"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/kt_invite" />
    </LinearLayout>

</RelativeLayout>
