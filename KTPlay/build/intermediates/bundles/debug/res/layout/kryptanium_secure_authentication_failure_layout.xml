<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="17.5dp"
    android:paddingRight="17.5dp">

    <TextView
        android:id="@+id/kryptanium_secure_authentication_failed_description"
        style="@style/kryptanium_secondary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="17.5dp"
        android:text="@string/kt_warning_security_verification_times" />

    <ImageView
        android:id="@+id/kryptanium_secure_authentication_failed_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kryptanium_secure_authentication_failed_description"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:background="@drawable/kryptanium_icon_alert_failed" />

    <TextView
        android:id="@+id/kryptanium_secure_authentication_failed_textview"
        style="@style/kryptanium_primary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kryptanium_secure_authentication_failed_imageview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="@string/kt_security_verification_failure_times" />

    <LinearLayout
        android:id="@+id/kryptanium_secure_authentication_failed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kryptanium_secure_authentication_failed_textview"
        android:layout_marginTop="17.5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kryptanium_secure_authentication_failed_again"
            style="@style/kryptanium_button_style_main"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/kt_try_again" />

        <TextView
            android:id="@+id/kryptanium_secure_authentication_failed_backout"
            style="@style/kryptanium_link_text_large"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/kt_skip_security_verification" />
    </LinearLayout>

    <TextView
        android:id="@+id/kryptanium_secure_authentication_failed_other_user"
        style="@style/kryptanium_button_style_main"
        android:layout_below="@+id/kryptanium_secure_authentication_failed_textview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="17.5dp"
        android:text="@string/kt_login_with_other_accounts"
        android:visibility="gone" />

</RelativeLayout>
