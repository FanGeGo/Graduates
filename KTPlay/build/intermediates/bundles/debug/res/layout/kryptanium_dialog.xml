<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/kryptanium_popup_bg"
        android:orientation="vertical"
        android:padding="6dp">

        <!-- title -->

        <TextView
            android:id="@id/kryptanium_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingBottom="0dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="13dp"
            android:textColor="@color/kt_theme_title_textcolor"
            android:textSize="@dimen/kryptanium_text_size_big"
            android:visibility="gone" />

        <!-- message -->

        <TextView
            android:id="@id/kryptanium_dialog_message"
            style="@style/kryptanium_secondary_text_light"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="13dp"
            android:visibility="gone" />

        <!-- content view -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/kryptanium_titlebar_line_height"
            android:background="@color/kt_theme_listitem_dividercolor"
            android:paddingLeft="@dimen/kryptanium_layout_paddingLeft"
            android:scaleType="fitXY" />
        <!-- buttons -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:minHeight="44dp">

                <!-- negative button -->

                <TextView
                    android:id="@id/kryptanium_dialog_negative_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/kt_theme_color"
                    android:textSize="@dimen/kryptanium_text_size_big"
                    android:visibility="gone" />

                <!-- positive button -->

                <ImageView
                    android:layout_width="@dimen/kryptanium_titlebar_line_height"
                    android:layout_height="match_parent"
                    android:background="@color/kt_theme_listitem_dividercolor"
                    android:paddingLeft="@dimen/kryptanium_layout_paddingLeft"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@id/kryptanium_dialog_positive_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/kt_theme_color"
                    android:textSize="@dimen/kryptanium_text_size_big"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</ScrollView>
