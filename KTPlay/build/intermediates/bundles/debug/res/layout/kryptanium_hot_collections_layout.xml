<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_hot_collections_layout"
    style="@style/kryptanium_home_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">


    <ImageView
        android:id="@id/kt_icon"
        style="@style/kryptanium_subtitle_icon"
        android:layout_marginLeft="@dimen/kt_content_padding"
        android:src="@drawable/kt_home_collection" />

    <TextView
        style="@style/kryptanium_subtitle_text"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/kt_icon"
        android:text="@string/kt_top_collections" />


    <com.ktplay.widget.KTListViewInScrollView
        android:id="@+id/kryptanium_topic_listview"
        style="@style/kryptanium_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kt_icon"
        android:layout_marginTop="@dimen/kt_content_padding"
        android:cacheColorHint="#00000000"
        android:dividerHeight="0.5dp"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:listSelector="@color/kt_theme_listitem_dividercolor"></com.ktplay.widget.KTListViewInScrollView>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="6dp"-->
    <!--android:background="@color/kryptanium_title_bg"/>-->

</RelativeLayout>
