<?xml version="1.0" encoding="utf-8"?>

<!-- 列表项 - 兑换码 -奖励内容 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/kryptanium_list_item_with_noclick"
    android:orientation="horizontal">


    <ImageView
        android:id="@id/kt_item_icon"
        android:layout_width="@dimen/kt_icon_width"
        android:layout_height="@dimen/kt_icon_height"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/kt_item_name"
        style="@style/kryptanium_primary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:maxLines="1"
        android:maxWidth="180dp" />

    <TextView
        android:id="@+id/kt_item_value"
        style="@style/kryptanium_primary_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="1" />
</LinearLayout>
