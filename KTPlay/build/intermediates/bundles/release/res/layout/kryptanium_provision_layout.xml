<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/kryptanium_logincontainer_sns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none">

        <TextView
            android:id="@+id/kryptanium_provision_text"
            style="@style/kryptanium_secondary_text_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/kryptanium_default_gap"
            android:paddingRight="@dimen/kryptanium_default_gap" />
    </ScrollView>

</FrameLayout>
