<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kryptanium_dialog_wait_parentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05000000"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/kryptanium_corner_bg_black_alpha"
        android:orientation="horizontal"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/kryptanium_dialog_wait_progressbar"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:indeterminate="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/kryptanium_dialog_wait_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/kt_please_wait"
            android:textColor="#ffffff"></TextView>
    </LinearLayout>
</FrameLayout>
